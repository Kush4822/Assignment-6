<body>
   <div class="row">
    <div class="col-md-12">
        <h2>
            Posts
            <a href="/posts/add" class="btn btn-primary pull-right">Add Post</a>
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Post Id</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postDate}}</td>
                        <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                        <td>{{this.published}}</td>
                        <td><a href="/posts/delete/{{this.id}}" class="btn btn-danger">Rmove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
        <h4 class="h4 text-center">{{message}}</h4>
    </div>
    {{/unless}}
</div>
</body>



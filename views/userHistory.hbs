<body>
    <div class="row">
        <div class="col-md-12">
            <h2>{{session.user.userName}} ({{session.user.email}}) History</h2>
            <hr />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Login Date/Time</th>
                            <th>Client Information</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each session.user.loginHistory}}
                        <tr>
                            <td>{{this.dateTime}}</td>
                            <td>{{this.userAgent}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{#unless posts}}
        <div class="col-md-12 text-center">
            <h4 class="h4 text-center">{{message}}</h4>
        </div>
        {{/unless}}
    </div>
</body>